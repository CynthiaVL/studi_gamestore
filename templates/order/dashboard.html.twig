{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="hero-scene">
        <div class="text-center hero-scene-content secondary">
            <h1>Dashboard</h1>
        </div>
    </div>
    <div>
        {% if orders is empty %}
            <p>Aucune commande actuellemant.</p>
        {% else %}
            {% for order in orders %}
                <div class="row justify-content-center mt-4">
                    <div class="col-md-8">
                        <div class="basket-info mb-3">
                            <div class="d-flex justify-content-between align-items-center border-bottom pb-2">
                                <p><strong>Utilisateur :</strong> {{ order.user.firstname }} {{ order.user.lastname }}</p>
                                <p><strong>Jeu :</strong> {{ order.game.title }}</p>
                                <p><strong>Quantité :</strong> {{ order.quantity }}</p>
                                {% if order.game.promotion %}
                                    <p><strong>Prix :</strong> {{ order.game.promotion }}€</p>
                                {% else %}
                                    <p><strong>Prix :</strong> {{ order.game.price }}€</p>
                                {% endif %}                            
                                <p><strong>Date de retrait :</strong> {{ order.pickupDate|date('d-m-Y') }}</p>
                                <p><strong>Statut :</strong> {{ order.status }}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class='text-center justify-content'>
                    <form method="post" action="{{ path('app_delivred_order', {'id': order.id}) }}">
                        <button type="submit" class="btn btn-primary m-3">Finaliser la commande</button>
                    </form>
                    <form method="post" action="{{ path('app_remove_order', {'id': order.id}) }}">
                        <button type="submit" class="btn btn-danger m-3">Supprimer</button>
                    </form>
                </div>
            {% endfor %}
            <div class="row justify-content-center mt-4">
                <div class="col-md-8">
                    <div class="basket-info mb-3">
                        <div class="text-center justify-content-center">
                            <p><strong>Prix total :</strong>{{ totalPrice }}€</p>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}