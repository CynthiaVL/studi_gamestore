{% extends 'base.html.twig' %}

{% block title %}Jeux{% endblock %}

{% block body %}
    <h1>Nos jeux</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ game.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ game.content }}</td>
            </tr>
            <tr>
                <th>Pegi</th>
                <td>{{ game.pegi }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ game.genre }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ game.price }}</td>
            </tr>
            <tr>
                <th>Promotion</th>
                <td>{{ game.promotion }}</td>
            </tr>
            <tr>
                <th>Plateforme</th>
                <td>{{ game.platform }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ game.image }}</td>
            </tr>
            <tr>
                <th>Date de sortie</th>
                <td>{{ game.releaseDate ? game.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ game.createdAt ? game.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifier le</th>
                <td>{{ game.updatedAt ? game.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_game_index') }}">Retourner à la liste</a>

    <a href="{{ path('app_game_edit', {'id': game.id}) }}">Modifier</a>

    {{ include('game/_delete_form.html.twig') }}
{% endblock %}
