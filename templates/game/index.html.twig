{% extends 'base.html.twig' %}

{% block title %}Game index{% endblock %}

{% block body %}
    <h1>Game index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Contenue</th>
                <th>Age</th>
                <th>Genre</th>
                <th>Prix</th>
                <th>Plateforme</th>
                <th>Image</th>
                <th>Date de sortie</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.title }}</td>
                <td>{{ game.content }}</td>
                <td>{{ game.pegi }}</td>
                <td>{{ game.genre }}</td>
                <td>{{ game.price }}</td>
                <td>{{ game.platform }}</td>
                <td>{{ game.image }}</td>
                <td>{{ game.releaseDate ? game.releaseDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_game_show', {'id': game.id}) }}">show</a>
                    <a href="{{ path('app_game_edit', {'id': game.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_game_new') }}">Create new</a>
{% endblock %}
